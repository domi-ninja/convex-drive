{
    "name": "sync-client",
    "version": "1.0.0",
    "description": "Cross-platform file sync client with tray icon support",
    "main": "src/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --enable-logging",
        "build": "electron-builder",
        "build-win": "electron-builder --win",
        "build-mac": "electron-builder --mac",
        "build-all": "electron-builder --win --mac"
    },
    "keywords": [
        "electron",
        "sync",
        "cross-platform",
        "tray"
    ],
    "author": "Your Name",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.yourcompany.sync-client",
        "productName": "Sync Client",
        "directories": {
            "output": "dist"
        },
        "files": [
            "src/**/*",
            "assets/**/*"
        ],
        "mac": {
            "category": "public.app-category.utilities",
            "target": "dmg"
        },
        "win": {
            "target": "nsis"
        }
    }
}